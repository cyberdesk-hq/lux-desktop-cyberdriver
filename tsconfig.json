{
  "compilerOptions": {
    // Type Checking
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    // Modules
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    // Emit
    "noEmit": true,

    // Interop Constraints
    "esModuleInterop": true,
    "isolatedModules": true,

    // Language
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "useDefineForClassFields": true,

    // Completeness
    "skipLibCheck": true,
  },
  "include": ["src", "socket-io.d.ts", "types.d.ts"]
}
